generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String?
  email     String?   @unique
  password  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  meetings  meeting[]
}

model meeting {
  id             String           @id @default(uuid())
  passcode       String?
  userId         String
  roomName       String?
  date           DateTime         @default(now())
  startTime      DateTime?
  endTime        DateTime?
  participants   String[]
  isHost         Boolean
  user           User             @relation(fields: [userId], references: [id])
  rawChunks      mediaChunks[]
  finalRecording FinalRecording[]
}

model mediaChunks {
  id         String  @id @default(uuid())
  meetingId  String
  bucketLink String
  meeting    meeting @relation(fields: [meetingId], references: [id])
}

model FinalRecording {
  id          String   @id @default(uuid())
  meeting     meeting  @relation(fields: [meetingId], references: [id])
  meetingId   String
  bucketLink  String
  generatedAt DateTime @default(now())
  format      format
  quality     quality
}

enum quality {
  LOW
  MEDIUM
  HIGH
}

enum format {
  MP3
  WAV
  OGG
}
